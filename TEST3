toggleAllBtn.MouseButton1Click:Connect(function()
    local allEnabled = true
    for blockName in pairs(blockTypeEnabled) do
        if not blockTypeEnabled[blockName] then
            allEnabled = false
            break
        end
    end
    
    local newState = not allEnabled
    for blockName in pairs(blockTypeEnabled) do
        blockTypeEnabled[blockName] = newState
    end
    
    -- Update all checkbox buttons
    for _, button in ipairs(frame:GetChildren()) do
        if button:IsA("TextButton") and button.Name:find("Check_") then
            local blockName = button.Name:sub(7) -- Remove "Check_" prefix
            if blockTypeEnabled[blockName] then
                button.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
                button.Text = "âœ“ " .. blockName
            else
                button.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
                button.Text = "âœ— " .. blockName
            end
        end
    end
    
    -- Update ESP for all blocks
    local blocks = getPlayerLuckyBlocks(60)
    for _, block in pairs(blocks) do
        updateBlockESP(block)
    end
end)

-- Create checkbox buttons for each block type
local checkboxStartY = 110
local checkboxHeight = 22 -- Smaller buttons
local checkboxSpacing = 5

local blockNames = {}
for name in pairs(luckyBlockTable) do
    table.insert(blockNames, name)
end
table.sort(blockNames)

for i, blockName in ipairs(blockNames) do
    local checkbox = Instance.new("TextButton", frame)
    checkbox.Name = "Check_" .. blockName
    checkbox.Size = UDim2.new(1, -20, 0, checkboxHeight)
    checkbox.Position = UDim2.new(0, 10, 0, checkboxStartY + ((i-1) * (checkboxHeight + checkboxSpacing)))
    checkbox.BackgroundColor3 = blockTypeEnabled[blockName] and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(150, 0, 0)
    checkbox.Text = (blockTypeEnabled[blockName] and "âœ“ " or "âœ— ") .. blockName
    checkbox.TextSize = 12 -- Smaller font for checkboxes
    checkbox.Font = Enum.Font.FredokaOne
    checkbox.TextColor3 = Color3.new(1, 1, 1)
    checkbox.TextXAlignment = Enum.TextXAlignment.Left
    Instance.new("UICorner", checkbox).CornerRadius = UDim.new(0, 5)
    
    checkbox.MouseButton1Click:Connect(function()
        blockTypeEnabled[blockName] = not blockTypeEnabled[blockName]
        checkbox.BackgroundColor3 = blockTypeEnabled[blockName] and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(150, 0, 0)
        checkbox.Text = (blockTypeEnabled[blockName] and "âœ“ " or "âœ— ") .. blockName
        
        local blocks = getPlayerLuckyBlocks(60)
        for _, block in pairs(blocks) do
            if block.Name == blockName then
                updateBlockESP(block)
            end
        end
    end)
end

-- Dragging functionality
local dragging, dragInput, dragStart, startPos
local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

