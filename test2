Instance.new("UICorner", espToggleBtn).CornerRadius = UDim.new(1, 0)
espToggleBtn.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled
    espToggleBtn.BackgroundColor3 = espEnabled and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(150, 0, 0)
    espToggleBtn.Text = "ESP: " .. (espEnabled and "ON" or "OFF")
    
    local blocks = getPlayerLuckyBlocks(60)
    for _, block in pairs(blocks) do
        if espEnabled then
            applyBlockESP(block, truePetMap[block])
        else
            removeBlockESP(block)
        end
    end
end)

