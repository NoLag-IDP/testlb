-- Function to create scrollable filter list
local function createFilterList()
    -- Clear existing buttons
    for _, child in ipairs(scrollFrame:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end
    
    -- Create sorted list of block names
    local blockNames = {}
    for name in pairs(luckyBlockTable) do
        table.insert(blockNames, name)
    end
    table.sort(blockNames)
    
    local buttonHeight = 22
    local spacing = 3
    local totalHeight = 0
    
    -- Create buttons for each block type
    for i, blockName in ipairs(blockNames) do
        local option = Instance.new("TextButton", scrollFrame)
        option.Size = UDim2.new(1, -10, 0, buttonHeight)
        option.Position = UDim2.new(0, 5, 0, totalHeight)
        option.BackgroundColor3 = blockTypeEnabled[blockName] and Color3.fromRGB(0, 140, 60) or Color3.fromRGB(140, 0, 40)
        option.Text = (blockTypeEnabled[blockName] and "âœ“ " or "âœ— ") .. blockName
        option.TextSize = 11
        option.Font = Enum.Font.FredokaOne
        option.TextColor3 = Color3.new(1, 1, 1)
        option.TextXAlignment = Enum.TextXAlignment.Left
        Instance.new("UICorner", option).CornerRadius = UDim.new(0, 4)
        
        option.MouseButton1Click:Connect(function()
            blockTypeEnabled[blockName] = not blockTypeEnabled[blockName]
            option.BackgroundColor3 = blockTypeEnabled[blockName] and Color3.fromRGB(0, 140, 60) or Color3.fromRGB(140, 0, 40)
            option.Text = (blockTypeEnabled[blockName] and "âœ“ " or "âœ— ") .. blockName
            
            -- Update ESP for this block type
            local blocks = getPlayerLuckyBlocks(60)
            for _, block in pairs(blocks) do
                if block.Name == blockName then
                    updateBlockESP(block, false)
                end
            end
        end)
        
        totalHeight = totalHeight + buttonHeight + spacing
    end
    
    -- Set canvas size for scrolling
    scrollFrame.CanvasSize = UDim2.new(0, 0, 0, totalHeight)
end

-- Create initial filter list
createFilterList()

-- Variables for randomization cooldown
local isRandomizing = false
local originalBtnText = "RANDOMIZE"
local originalBtnColor = Color3.fromRGB(0, 100, 200)
local disabledBtnColor = Color3.fromRGB(100, 100, 100)

-- Function to disable/enable randomize button
local function setRandomizeButtonEnabled(enabled)
    randomizeBtn.Active = enabled
    randomizeBtn.BackgroundColor3 = enabled and originalBtnColor or disabledBtnColor
    randomizeBtn.Text = enabled and originalBtnText or "Please wait..."
end

-- Fixed countdown and randomize function
local function countdownAndRandomize()
    if isRandomizing then return end -- Prevent multiple clicks
    
    isRandomizing = true
    setRandomizeButtonEnabled(false)
    
    -- Countdown from 10 to 1
    for i = 10, 1, -1 do
        randomizeBtn.Text = "Randomizing in: " .. i
        task.wait(1)
    end
    
    -- Perform randomization
    randomizeNearbyBlocks()
    flashEffect(randomizeBtn)
    
    -- Reset button to original state
    randomizeBtn.Text = originalBtnText
    setRandomizeButtonEnabled(true)
    isRandomizing = false
end

-- Connect randomize button with cooldown prevention
randomizeBtn.MouseButton1Click:Connect(function()
    if not isRandomizing then
        countdownAndRandomize()
    end
end)

-- Other button event handlers
espToggleBtn.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled
    espToggleBtn.BackgroundColor3 = espEnabled and Color3.fromRGB(0, 160, 0) or Color3.fromRGB(160, 0, 0)
    espToggleBtn.Text = "ESP: " .. (espEnabled and "ON" or "OFF")
    
    local blocks = getPlayerLuckyBlocks(60)
    for _, block in pairs(blocks) do
        updateBlockESP(block, false)
    end
end)

clearAllBtn.MouseButton1Click:Connect(function()
    for blockName in pairs(blockTypeEnabled) do
        blockTypeEnabled[blockName] = false
    end
    
    local blocks = getPlayerLuckyBlocks(60)
    for _, block in pairs(blocks) do
        removeBlockESP(block)
    end
    
    createFilterList()
end)

selectAllBtn.MouseButton1Click:Connect(function()
    for blockName in pairs(blockTypeEnabled) do
        blockTypeEnabled[blockName] = true
    end
    
    local blocks = getPlayerLuckyBlocks(60)
    for _, block in pairs(blocks) do
        updateBlockESP(block, false)
    end
    
    createFilterList()
end)

-- Toggle button functionality
local guiVisible = true
toggleBtn.MouseButton1Click:Connect(function()
    guiVisible = not guiVisible
    frame.Visible = guiVisible
end)

-- Dragging functionality
local dragging, dragInput, dragStart, startPos
local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

-- Auto-apply ESP to nearby blocks when game loads
task.wait(3)

-- Continuous block detection
while true do
    local blocks = getPlayerLuckyBlocks(60)
    for _, block in ipairs(blocks) do
        if not truePetMap[block] then
            local chosen = selectWeightedPet(block.Name)
            truePetMap[block] = chosen
            updateBlockESP(block, false)
        else
            updateBlockESP(block, false)
        end
    end
    task.wait(1)
end
