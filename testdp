    local isVisible = dropdownContainer.Visible
    dropdownContainer.Visible = not isVisible
    dropdownBtn.Text = isVisible and "FILTER â–¼" or "FILTER â–²"
    
    if not isVisible then
        -- Show dropdown and create options
        frame.Size = UDim2.new(0, 260, 0, 265)
        createDropdownOptions()
    else
        -- Hide dropdown
        frame.Size = UDim2.new(0, 260, 0, 145)
        -- Clear existing options
        for _, child in ipairs(dropdownContainer:GetChildren()) do
            if child:IsA("TextButton") then
                child:Destroy()
            end
        end
    end
end)

