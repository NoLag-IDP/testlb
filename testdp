-- Dropdown toggle button
local dropdownBtn = Instance.new("TextButton", frame)
dropdownBtn.Size = UDim2.new(0.48, -5, 0, 26)
dropdownBtn.Position = UDim2.new(0.52, 0, 0, 70)
dropdownBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 100)
