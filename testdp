-- Function to create dropdown options
local function createDropdownOptions()
    -- Clear existing options first
    for _, child in ipairs(dropdownContainer:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end
    
    local optionHeight = 22
    local spacing = 2
    local currentY = 5
    
    -- Toggle All button
    local toggleAllBtn = Instance.new("TextButton", dropdownContainer)
    toggleAllBtn.Size = UDim2.new(1, -10, 0, 24)
    toggleAllBtn.Position = UDim2.new(0, 5, 0, currentY)
    toggleAllBtn.BackgroundColor3 = Color3.fromRGB(60, 80, 120)
    toggleAllBtn.Text = "TOGGLE ALL"
    toggleAllBtn.TextSize = 12
    toggleAllBtn.Font = Enum.Font.FredokaOne
    toggleAllBtn.TextColor3 = Color3.new(1, 1, 1)
    Instance.new("UICorner", toggleAllBtn).CornerRadius = UDim.new(0, 4)
    
    toggleAllBtn.MouseButton1Click:Connect(function()
        local allEnabled = true
        for blockName in pairs(blockTypeEnabled) do
            if not blockTypeEnabled[blockName] then
                allEnabled = false
                break
            end
        end
        
        local newState = not allEnabled
        for blockName in pairs(blockTypeEnabled) do
            blockTypeEnabled[blockName] = newState
        end
        
        -- Update ESP for all blocks
        local blocks = getPlayerLuckyBlocks(60)
        for _, block in pairs(blocks) do
            updateBlockESP(block, false)
        end
        
        -- Recreate dropdown with updated states
        createDropdownOptions()
    end)
    
    currentY = currentY + 30
    
    -- Create sorted list of block names
    local blockNames = {}
    for name in pairs(luckyBlockTable) do
        table.insert(blockNames, name)
    end
    table.sort(blockNames)
    
    -- Create dropdown options for each block type
    for i, blockName in ipairs(blockNames) do
        local option = Instance.new("TextButton", dropdownContainer)
        option.Size = UDim2.new(1, -10, 0, optionHeight)
        option.Position = UDim2.new(0, 5, 0, currentY)
        option.BackgroundColor3 = blockTypeEnabled[blockName] and Color3.fromRGB(0, 140, 60) or Color3.fromRGB(140, 0, 40)
        option.Text = (blockTypeEnabled[blockName] and "âœ“ " or "âœ— ") .. blockName
        option.TextSize = 11
        option.Font = Enum.Font.FredokaOne
        option.TextColor3 = Color3.new(1, 1, 1)
        option.TextXAlignment = Enum.TextXAlignment.Left
        Instance.new("UICorner", option).CornerRadius = UDim.new(0, 4)
        
        option.MouseButton1Click:Connect(function()
            blockTypeEnabled[blockName] = not blockTypeEnabled[blockName]
            
            -- Update ESP for this specific block type
            local blocks = getPlayerLuckyBlocks(60)
            for _, block in pairs(blocks) do
                if block.Name == blockName then
                    updateBlockESP(block, false)
                end
            end
            
            -- Update the button appearance
            option.BackgroundColor3 = blockTypeEnabled[blockName] and Color3.fromRGB(0, 140, 60) or Color3.fromRGB(140, 0, 40)
            option.Text = (blockTypeEnabled[blockName] and "âœ“ " or "âœ— ") .. blockName
        end)
        
        currentY = currentY + optionHeight + spacing
    end
end

-- Dragging functionality
local dragging, dragInput, dragStart, startPos
local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

-- Auto-apply ESP to nearby blocks when game loads
task.wait(3)

-- Continuous block detection
while true do
    local blocks = getPlayerLuckyBlocks(60)
    for _, block in ipairs(blocks) do
        if not truePetMap[block] then
            local pets = luckyBlockTable[block.Name]
            local chosen = pets[math.random(1, #pets)]
            truePetMap[block] = chosen
            updateBlockESP(block, false)
        else
            updateBlockESP(block, false)
        end
    end
    task.wait(1)
end
