-- [ AUTO RANDOMIZE REMOVED VERSION - STEAL A BRAINROT COMPATIBLE ]

-- Keep all your services and variables
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local mouse = player:GetMouse()

-- Updated table for Steal a Brainrot Lucky Blocks
local luckyBlockTable = {
    ["Secret Lucky Block"] = { "Torrtuginni Dragonfrutini", "Pot Hotspot", "Esok Sekolah" },
    -- Add more lucky block types here as needed
    -- Example format:
    -- ["Common Lucky Block"] = { "Common Pet 1", "Common Pet 2" },
    -- ["Rare Lucky Block"] = { "Rare Pet 1", "Rare Pet 2" },
}

local espEnabled = true
local truePetMap = {}

-- glitch effect
local function glitchLabelEffect(label)
    coroutine.wrap(function()
        local original = label.TextColor3
        for i = 1, 2 do
            label.TextColor3 = Color3.new(1, 0, 0)
            wait(0.07)
            label.TextColor3 = original
            wait(0.07)
        end
    end)()
end

-- ESP apply for Lucky Blocks
local function applyBlockESP(luckyBlockModel, petName)
    local existingLabel = luckyBlockModel:FindFirstChild("PetBillboard", true)
    if existingLabel then existingLabel:Destroy() end
    local existingHighlight = luckyBlockModel:FindFirstChild("ESPHighlight")
    if existingHighlight then existingHighlight:Destroy() end
    if not espEnabled then return end

    local basePart = luckyBlockModel:FindFirstChildWhichIsA("BasePart") or luckyBlockModel.PrimaryPart
    if not basePart then 
        -- Try to find any part in the model
        for _, part in ipairs(luckyBlockModel:GetChildren()) do
            if part:IsA("BasePart") then
                basePart = part
                break
            end
        end
        if not basePart then return end
    end

    -- Check if block is ready to open (different from eggs)
    local isReady = true
    -- You might need to adjust this based on the game's mechanics
    -- Some lucky blocks might have timers or other indicators
    
    local billboard = Instance.new("BillboardGui")
    billboard.Name = "PetBillboard"
    billboard.Size = UDim2.new(0, 270, 0, 50)
    billboard.StudsOffset = Vector3.new(0, 4.5, 0)
    billboard.AlwaysOnTop = true
    billboard.MaxDistance = 500
    billboard.Parent = basePart

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = luckyBlockModel.Name .. " | " .. petName
    if not isReady then
        label.Text = luckyBlockModel.Name .. " | " .. petName .. " (Not Ready)"
        label.TextColor3 = Color3.fromRGB(160, 160, 160)
        label.TextStrokeTransparency = 0.5
    else
        label.TextColor3 = Color3.new(1, 1, 1)
        label.TextStrokeTransparency = 0
    end
    label.TextScaled = true
    label.Font = Enum.Font.FredokaOne
    label.Parent = billboard

    glitchLabelEffect(label)

    local highlight = Instance.new("Highlight")
    highlight.Name = "ESPHighlight"
    highlight.FillColor = Color3.fromRGB(0, 200, 255) -- Changed to blue for brainrot theme
    highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
    highlight.FillTransparency = 0.7
    highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
    highlight.Adornee = luckyBlockModel
    highlight.Parent = luckyBlockModel
end

-- Remove ESP
local function removeBlockESP(luckyBlockModel)
    local label = luckyBlockModel:FindFirstChild("PetBillboard", true)
    if label then label:Destroy() end
    local highlight = luckyBlockModel:FindFirstChild("ESPHighlight")
    if highlight then highlight:Destroy() end
end

-- Collect nearby lucky blocks
local function getPlayerLuckyBlocks(radius)
    local blocks = {}
    local char = player.Character or player.CharacterAdded:Wait()
    local root = char:FindFirstChild("HumanoidRootPart")
    if not root then return blocks end

    for _, obj in pairs(Workspace:GetDescendants()) do
        if obj:IsA("Model") and luckyBlockTable[obj.Name] then
            local dist
            local blockPosition
            
            -- Try to get position from PrimaryPart or any BasePart
            if obj.PrimaryPart then
                blockPosition = obj.PrimaryPart.Position
            else
                local firstPart = obj:FindFirstChildWhichIsA("BasePart")
                if firstPart then
                    blockPosition = firstPart.Position
                else
                    continue
                end
            end
            
            dist = (blockPosition - root.Position).Magnitude
            if dist <= (radius or 60) then
                if not truePetMap[obj] then
                    local pets = luckyBlockTable[obj.Name]
                    local chosen = pets[math.random(1, #pets)]
                    truePetMap[obj] = chosen
                end
                table.insert(blocks, obj)
            end
        end
    end
    return blocks
end

-- Randomize manually
local function randomizeNearbyBlocks()
    local blocks = getPlayerLuckyBlocks(60)
    for _, block in ipairs(blocks) do
        local pets = luckyBlockTable[block.Name]
        local chosen = pets[math.random(1, #pets)]
        truePetMap[block] = chosen
        applyBlockESP(block, chosen)
    end
    print("Randomized", #blocks, "lucky blocks.")
end

local function flashEffect(button)
    local originalColor = button.BackgroundColor3
    for i = 1, 3 do
        button.BackgroundColor3 = Color3.new(1, 1, 1)
        wait(0.05)
        button.BackgroundColor3 = originalColor
        wait(0.05)
    end
end

local function countdownAndRandomize(button)
    for i = 10, 1, -1 do
        button.Text = "Randomizing in: " .. i
        wait(1)
    end
    flashEffect(button)
    randomizeNearbyBlocks()
    button.Text = "Randomize Blocks"
end

-- GUI Setup (style-only changes: smaller, light black, white outline, rounded)
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "BrainrotBlockGui"

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 240, 0, 170)
frame.Position = UDim2.new(0, 20, 0, 100)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- white outline
local outline = Instance.new("UIStroke", frame)
outline.Thickness = 2
outline.Color = Color3.fromRGB(255, 255, 255)

-- rounded corners
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 10)

-- Title
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "ðŸ§  Brainrot Revealer"
title.Font = Enum.Font.FredokaOne
title.TextSize = 20
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextXAlignment = Enum.TextXAlignment.Center

-- Dragging (supports touch & mouse)
local dragging, dragInput, dragStart, startPos
local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

-- Randomize button (rounded)
local randomizeBtn = Instance.new("TextButton", frame)
randomizeBtn.Size = UDim2.new(1, -20, 0, 40)
randomizeBtn.Position = UDim2.new(0, 10, 0, 40)
randomizeBtn.BackgroundColor3 = Color3.fromRGB(0, 100, 200) -- Changed to blue for brainrot theme
randomizeBtn.Text = "Randomize Blocks"
randomizeBtn.TextSize = 18
randomizeBtn.Font = Enum.Font.FredokaOne
randomizeBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", randomizeBtn).CornerRadius = UDim.new(1, 0)
randomizeBtn.MouseButton1Click:Connect(function()
    countdownAndRandomize(randomizeBtn)
end)

-- ESP toggle button (rounded)
local toggleBtn = Instance.new("TextButton", frame)
toggleBtn.Size = UDim2.new(1, -20, 0, 36)
toggleBtn.Position = UDim2.new(0, 10, 0, 92)
toggleBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
toggleBtn.Text = "ESP: ON"
toggleBtn.TextSize = 16
toggleBtn.Font = Enum.Font.FredokaOne
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", toggleBtn).CornerRadius = UDim.new(1, 0)
toggleBtn.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled
    toggleBtn.Text = espEnabled and "ESP: ON" or "ESP: OFF"
    for _, block in pairs(getPlayerLuckyBlocks(60)) do
        if espEnabled then
            applyBlockESP(block, truePetMap[block])
        else
            removeBlockESP(block)
        end
    end
end)

-- Credit label
local credit = Instance.new("TextLabel", frame)
credit.Size = UDim2.new(1, 0, 0, 20)
credit.Position = UDim2.new(0, 0, 1, -20)
credit.BackgroundTransparency = 1
credit.Text = "Made by Siva"
credit.Font = Enum.Font.FredokaOne
credit.TextSize = 14
credit.TextColor3 = Color3.fromRGB(255, 255, 255)
credit.TextXAlignment = Enum.TextXAlignment.Center

-- Auto-apply ESP to nearby blocks when game loads
wait(3) -- Wait for game to load
randomizeNearbyBlocks()
